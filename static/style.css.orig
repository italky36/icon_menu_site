/* ===== КИОСК: без вертикальной прокрутки и с Roboto Bold ===== */
@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap&subset=cyrillic');

html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  overflow: hidden;
}

/* ==== Общие стили ==== */
body {
  background-color: #f0f0f0;
  font-family: 'Roboto', sans-serif;
  font-weight: 700;
  color: #333;
}
h1, h2 {
  margin-bottom: 20px;
  font-weight: 700;
}

/* ==== Ссылки ==== */
a {
  color: #0066cc;
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}

/* ==== Формы (админка) ==== */
form {
  background: #fff;
  padding: 20px;
  border-radius: 8px;
  max-width: 400px;
  margin-bottom: 30px;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
form input[type="text"],
form input[type="number"],
form input[type="file"],
form button {
  width: 100%;
  margin-bottom: 10px;
  padding: 8px;
  box-sizing: border-box;
  font-family: inherit;
  font-weight: 700;
}
form button {
  background-color: #0066cc;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}
form button:hover {
  background-color: #005bb5;
}

/* ==== Списки ==== */
ul {
  list-style: none;
  padding: 0;
}
ul li {
  margin-bottom: 10px;
  display: flex;
  align-items: center;
}
ul li img {
  margin-right: 10px;
}

/* ==== Главная сетка (киоск) ==== */
.pages {
  position: relative;
  z-index: 1;
  width: 100vw;
  height: calc(100vh - 100px);
  display: flex;
  justify-content: center;
}
.grid {
  display: grid;
  gap: 20px;
  padding: 20px;
  width: 90vw;
  margin-top: 40px;
}
.cell {
  background: rgba(255, 255, 255, 0.4);
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 1rem;
  cursor: pointer;
}
.cell img {
  max-width: 60%;
  max-height: 60%;
  margin-bottom: 8px;
}
.cell .label {
  text-align: center;
  font-weight: 700;
}

/* ==== Пагинация ==== */
.pagination {
  position: absolute;
  bottom: 20px;
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 40px;
  z-index: 2;
}
.pagination button {
  font-size: 1.5rem;
  padding: 10px 20px;
  background: rgba(0,0,0,0.5);
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-weight: 700;
}

/* ==== Фон ==== */
.background {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-size: cover;
  background-position: center;
  z-index: 0;
}

/* ==== Оверлей QR ==== */
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: transparent;
  z-index: 3;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.overlay.hidden {
  display: none;
}
.overlay button {
  margin-top: 20px;
  padding: 10px 20px;
  font-size: 1rem;
  border: none;
  background: white;
  cursor: pointer;
  font-weight: 700;
}
.overlay #qrcode {
  background: white;
  padding: 20px;
  border-radius: 8px;
  display: inline-block;
}

/* Таймер автоскрытия QR */
.qr-timer {
  margin-top: 10px;
  color: #000;
  font-size: 0.9rem;
  font-family: inherit;
  background: rgba(255,255,255,0.8);
  padding: 5px 10px;
  border-radius: 5px;
}

/* Убираем списки в админке */
.hidden {
  display: none;
}
